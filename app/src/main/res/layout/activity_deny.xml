<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7a6a6"
    tools:context="com.example.fatihpc.bilkentransportation.DenyActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="291dp"
        android:layout_height="309dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/denyTextView"
        app:layout_constraintStart_toStartOf="@+id/denyTextView"
        app:layout_constraintTop_toBottomOf="@+id/denyTextView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/deny" />

    <TextView
        android:id="@+id/denyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:background="#d13e3e"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="REQUEST DENIED"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
